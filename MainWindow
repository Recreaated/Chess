//import com.sun.tools.javac.Main;

import javax.swing.*;
//import javax.swing.pla.basic.BasicOptionPaneUI;
import java.awt.*;
import java.awt.event.ActionEvent;
//import java.awt.event.ActionListener;

public class MainWindow {

    public MainWindow(){
        innit();
    }//end of constructor

    private void innit(){
        JFrame window = new JFrame();
        window.setTitle("Andrew Benitez finally knows how to code");
        window.setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
        window.setSize(800,500);
        window.setLocationRelativeTo(null);

        JPanel panel = new JPanel();
        panel.setLayout(new FlowLayout(FlowLayout.CENTER,0,0));
        window.add(panel, BorderLayout.CENTER);


        panel.setBackground(Color.WHITE);
        char[] horLtr= {'A','B','C','D','E','F','G','H'};
        Button[][] chessBoard = new Button[8][8];
        for(int row = 0; row < 8; row++) {
            for(int col = 0; col < 8; col++) {
                String label = ""+ horLtr[row] + (col+1);
                chessBoard[row][col] =new Button(label);
                if (((row + col) % 2 == 0)) {
                    chessBoard[row][col].setBackground(Color.black);
                } else {
                    chessBoard[row][col].setBackground(Color.getHSBColor(158,91,25));
                }
                chessBoard[row][col].setPreferredSize((new Dimension(50,50)));
                chessBoard[row][col].addActionListener((ActionEvent e) -> System.out.println(label + " button was pressed"));
                panel.add(chessBoard[row][col]);
            }
        }

        window.setVisible(true);
    }//end of initializer method
}
